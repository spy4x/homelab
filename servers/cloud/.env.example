# Cloud Server Environment Configuration
# Copy this file to .env and fill in your actual values

SERVER_NAME=cloud
# SSH connection details for deployment
SSH_ADDRESS=root@your-server-ip
SSH_PORT=22
TIMEZONE=Europe/Berlin
DOMAIN=yourdomain.com

#region Ansible
# Ntfy notification tokens and URLs for system monitoring
# Get tokens from your ntfy instance: Settings â†’ Access Tokens
NTFY_TOKEN_HARDWARE=tk_YOUR_HARDWARE_TOKEN_HERE
NTFY_TOKEN_SECURITY=tk_YOUR_SECURITY_TOKEN_HERE
NTFY_TOKEN_UPTIME=tk_YOUR_UPTIME_TOKEN_HERE
NTFY_URL_HARDWARE=https://ntfy.yourdomain.com/hardware
NTFY_URL_SECURITY=https://ntfy.yourdomain.com/security
NTFY_URL_UPTIME=https://ntfy.yourdomain.com/uptime
#endregion Ansible

#region Paths
# Configure paths for your storage layout
BASE_PATH=~/cloudlab
PATH_APPS=${BASE_PATH}/apps                     # Docker services location
VOLUMES_PATH=${PATH_APPS}/.volumes
PATH_SYNC=${BASE_PATH}/sync                     # Syncthing shared folder
PATH_BACKUPS=${PATH_SYNC}/cloud-light-backups   # Backup storage
#endregion Paths

#region Proxy
# Traefik reverse proxy configuration
PROXY_SUBDOMAIN=proxy-cloud
PROXY_CPU_LIMIT=1
PROXY_MEM_LIMIT=512M
BASIC_AUTH_USER=admin
# Generate with: echo $(htpasswd -nB admin) | sed 's/\$/\$\$/g'
BASIC_AUTH_PASSWORD=$$2y$$05$$YOUR_HASHED_PASSWORD_HERE
#endregion Proxy

#region Backups
# Syncthing and backup notification configuration
SYNCTHING_SUBDOMAIN=sync-cloud
SYNCTHING_CPU_LIMIT=1
SYNCTHING_MEM_LIMIT=1024M
NTFY_URL_BACKUPS=https://ntfy-cloud.yourdomain.com/backups
NTFY_TOKEN_BACKUPS=tk_YOUR_BACKUP_TOKEN_HERE
#endregion Backups

#region Uptime
# Gatus health monitoring configuration
GATUS_CONFIG_PATH=${PATH_APPS}/configs/gatus.yml
GATUS_SUBDOMAIN=uptime-cloud
NTFY_UPTIME_TOPIC=uptime
NTFY_UPTIME_AUTH_TOKEN=tk_YOUR_UPTIME_TOKEN_HERE
#endregion Uptime

#region WatchTower
# Container auto-update configuration
WATCHTOWER_CPU_LIMIT=0.5
WATCHTOWER_MEM_LIMIT=256M
#endregion WatchTower

#region NTFY
# Ntfy notification service
NTFY_SUBDOMAIN=ntfy-cloud
NTFY_URL=https://ntfy-cloud.yourdomain.com
#endregion NTFY

#region Mail Server
# Rspamd web interface password
# Generate with: echo $(htpasswd -nB admin) | sed 's/\$/\$\$/g'
RSPAMD_PASSWORD=YOUR_RSPAMD_PASSWORD_HERE

# SMTP Configuration
# These credentials are for sending emails from services
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=587
SMTP_FROM=noreply@yourdomain.com
SMTP_USERNAME=noreply@yourdomain.com
# Generate with: head -c 32 /dev/urandom | base64 | head -c 32
SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE
#endregion Mail Server

#region Healthchecks
# Healthchecks.io monitoring secret key
# Generate with: openssl rand -base64 32
HEALTHCHECKS_SECRET_KEY=YOUR_HEALTHCHECKS_SECRET_KEY_HERE
#endregion Healthchecks

