# region Backups
BACKUPS_PASSWORD=REPLACE_WITH_YOUR_SECURE_PASSWORD
# Get token from: https://ntfy.yourdomain.com → Account → Access Tokens → Create Token
NTFY_URL=https://ntfy.${DOMAIN}/backups
NTFY_AUTH_TOKEN=tk_your_token_here
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL_FOR_NOTIFICATIONS_FROM_BACKUPS
