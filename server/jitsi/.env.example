# Jitsi Meet Configuration Example
# Copy this to .env and fill in the values

# Domain and URLs (will inherit from parent .env)
# These use the DOMAIN variable from /home/spy4x/dev/homelab/server/.env
PUBLIC_URL=https://meeting.${DOMAIN}
XMPP_DOMAIN=meeting.${DOMAIN}
XMPP_AUTH_DOMAIN=auth.meeting.${DOMAIN}
XMPP_MUC_DOMAIN=muc.meeting.${DOMAIN}
XMPP_INTERNAL_MUC_DOMAIN=internal-muc.meeting.${DOMAIN}
XMPP_GUEST_DOMAIN=guest.meeting.${DOMAIN}
XMPP_RECORDER_DOMAIN=recorder.meeting.${DOMAIN}

# Timezone (will inherit from parent .env)
TZ=${TIMEZONE}

# Ports - DO NOT expose 80/443 as Traefik handles those
JVB_PORT=10000

# === REQUIRED SECRETS - Generate random strings for each ===
# Use: openssl rand -hex 32
JICOFO_COMPONENT_SECRET=
JICOFO_AUTH_PASSWORD=
JVB_AUTH_PASSWORD=
JIBRI_RECORDER_PASSWORD=
JIBRI_XMPP_PASSWORD=

# Fixed usernames
JVB_AUTH_USER=jvb
JIGASI_XMPP_USER=jigasi
JIBRI_RECORDER_USER=recorder
JIBRI_XMPP_USER=jibri

# Image version
JITSI_IMAGE_VERSION=stable

# Disable HTTPS since Traefik handles it
DISABLE_HTTPS=1
ENABLE_HTTP_REDIRECT=0
ENABLE_HSTS=0
ENABLE_LETSENCRYPT=0

# Features
ENABLE_AUTH=0
ENABLE_GUESTS=1
ENABLE_LOBBY=1
ENABLE_BREAKOUT_ROOMS=1
ENABLE_PREJOIN_PAGE=1
ENABLE_WELCOME_PAGE=1
ENABLE_P2P=1
ENABLE_COLIBRI_WEBSOCKET=1
ENABLE_RECORDING=0

# Restart policy
RESTART_POLICY=unless-stopped

# Config directory (matching your pattern)
CONFIG=./.volumes
