{
  "tasks": {
    // #region Ansible
    "ansible": {
      "command": "deno run -A ./scripts/ansible/+main.ts",
      "description": "ğŸ”§ Run Ansible playbooks (auto-loads env vars)"
    },
    // #endregion Ansible

    // #region Deploy
    "deploy": {
      "command": "deno run -A ./scripts/deploy/+main.ts",
      "description": "ğŸš€ Deploy services to remote server (compose.yml, localStacks, sharedStacks)"
    },
    "ssh": {
      "command": "deno run -A ./scripts/ssh/+main.ts",
      "description": "ğŸ” SSH into server by name"
    },
    // #endregion Deploy

    // #region Backup
    "backup": {
      "command": "deno run --env-file=.env -A ./scripts/backup/+main.ts",
      "description": "ğŸ’¾ Run backup for all services using Restic"
    },
    "backup:restore": {
      "command": "deno run -A ./scripts/backup/restore.ts",
      "description": "ğŸ“¥ Restore service data from backup (interactive)"
    },
    "offline-backup": {
      "command": "deno run --env-file=.env.root -A ./scripts/offline-backup/+main.ts",
      "description": "ğŸ—„ï¸ Backup/restore to/from external drive (monthly offline backups)"
    },
    // #endregion Backup

    // #region Encryption
    "env:encrypt": {
      "command": "deno run -A scripts/encryption/encrypt.ts",
      "description": "ğŸ” Encrypt all .env files to .env.age"
    },
    "env:decrypt": {
      "command": "deno run -A scripts/encryption/decrypt.ts",
      "description": "ğŸ”“ Decrypt all .env.age files to .env"
    },
    // #endregion Encryption

    // #region Git Hooks
    "hooks:install": "deno run -R=deno.json,deno.jsonc,.git/hooks/ -W=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": "deno task check && deno task env:encrypt",
    "hooks:post-checkout": "deno task env:decrypt",
    "hooks:post-merge": "deno task env:decrypt",
    // #endregion Git Hooks

    // #region Checks
    "check": {
      "command": "echo 'âœ… All checks passed!'",
      "description": "âœ… Run all checks (lint, fmt, types, tests)",
      "dependencies": [
        "lint:check",
        "fmt:check",
        "ts:check",
        "test"
      ]
    },
    "fmt:fix": {
      "command": "deno fmt",
      "description": "âœ¨ Auto-format code"
    },
    "fmt:check": {
      "command": "deno fmt --check",
      "description": "ğŸ“ Check code formatting"
    },
    "lint:fix": {
      "command": "deno lint --fix",
      "description": "ğŸ” Auto-fix linting issues"
    },
    "lint:check": {
      "command": "deno lint",
      "description": "ğŸ” Check for linting issues"
    },
    "ts:check": {
      "command": "deno check **/*.ts",
      "description": "ğŸ“˜ Type-check TypeScript files"
    },
    "test": {
      "command": "deno test",
      "description": "ğŸ§ª Run tests"
    },
    "fix": {
      "command": "echo 'ğŸ”§ All fixes applied!'",
      "description": "ğŸ”§ Auto-fix all issues (lint + format)",
      "dependencies": [
        "lint:fix",
        "fmt:fix"
      ]
    }
    // #endregion Checks
  },
  "imports": {
    "@scripts/backup": "./scripts/backup/src/+lib.ts",
    "@std/assert": "jsr:@std/assert@^1.0.17",
    "@std/dotenv": "jsr:@std/dotenv",
    "@std/fs": "jsr:@std/fs@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.4"
  },
  "exclude": [
    "**/.vite/*",
    "**/.cache/*",
    "**/dist/*",
    ".volumes",
    ".git",
    "node_modules",
    "dist",
    "build",
    "docs",
    "infra",
    "*.lock"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "require-await"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve",
    "semiColons": false
  }
}
